<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= data.page.title || "The Middleman" %></title>
    
    <%= stylesheet_link_tag "bootstrap/bootstrap", "bootstrap/bootstrap-responsive" %>
    <%= stylesheet_link_tag "font-awesome/font-awesome" %>
    <%= stylesheet_link_tag "zocial/css/icon-font" %>
    <%= javascript_include_tag  "jquery-1.9.1.min" %>
    <%= javascript_include_tag  "jquery.lavalamp.min" %>
    <%= javascript_include_tag  "bootstrap" %>
    <%= javascript_include_tag  "all" %>
  </head>
  
  <body class="<%= page_classes %>">
    <%= partial "layouts/top_nav" %>
    <div class="container">
      <div class="row">
        <div class="span9">
<%= yield %>
        </div>
        <div class="span3">
          <%= partial "layouts/sidebar" %>
        </div><!--/span-->
      </div>
    </div>
    <%= partial "layouts/footer" %>

  </body>
</html>
